{
  "title": "Dodo Payments - Application Dashboard",
  "uid": "dodo-payments-dashboard",
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Pod Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "count(kube_pod_status_ready{namespace='dodo-payments', condition='true'} == 1)",
          "legendFormat": "Running Pods"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "CPU Usage by Pod",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace='dodo-payments'}[5m])) by (pod)",
          "legendFormat": "{{ pod }}"
        }
      ]
    },
    {
      "id": 3,
      "title": "Memory Usage by Pod",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{namespace='dodo-payments'}) by (pod)",
          "legendFormat": "{{ pod }}"
        }
      ]
    },
    {
      "id": 4,
      "title": "Pod Restarts",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "sum(kube_pod_container_status_restarts_total{namespace='dodo-payments'}) by (pod)",
          "legendFormat": "{{ pod }}"
        }
      ]
    },
    {
      "id": 5,
      "title": "Active Pods",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "count(kube_pod_info{namespace='dodo-payments'})",
          "legendFormat": "Total Pods"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 10,
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 1 },
              { "color": "green", "value": 3 }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Deployments Ready",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "kube_deployment_status_replicas_available{namespace='dodo-payments'}",
          "legendFormat": "{{ deployment }}"
        }
      ]
    }
  ]
}